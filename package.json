{
  "name": "agrific-api",
  "version": "1.0.0",
  "main": "src",
  "private": true,
  "description": "Client facing API for the Agrific product",
  "scripts": {
    "build": "foal rmdir build && tsc -p tsconfig.app.json",
    "start": "pm2-runtime start ecosystem.config.js",
    "dev": "npm run build && concurrently \"tsc -p tsconfig.app.json -w\" \"supervisor -w ./build,./config -e js,json,yml --no-restart-on error ./build/index.js\"",
    "build:test": "foal rmdir build && tsc -p tsconfig.test.json",
    "start:test": "mocha --file ./build/test.js \"./build/**/*.spec.js\"",
    "test": "npm run build:test && concurrently \"tsc -p tsconfig.test.json -w\" \"mocha --file ./build/test.js -w \\\"./build/**/*.spec.js\\\"\"",
    "build:e2e": "foal rmdir build && tsc -p tsconfig.e2e.json",
    "start:e2e": "mocha --timeout 4000 --file ./build/e2e.js \"./build/e2e/**/*.js\"",
    "e2e": "npm run build:e2e && concurrently \"tsc -p tsconfig.e2e.json -w\" \"mocha --file ./build/e2e.js -w \\\"./build/e2e/**/*.js\\\"\"",
    "lint": "eslint --ext ts src",
    "lint:fix": "eslint --ext ts --fix src",
    "docker": "npm run build && concurrently \"tsc -p tsconfig.app.json -w\" \"supervisor -w ./build,./config -e js,json,yml --no-restart-on error ./build/index.js\"",
    "reload": "pm2-runtime reload ecosystem.config.js --env production"
  },
  "engines": {
    "node": ">=10"
  },
  "dependencies": {
    "@foal/aws-s3": "^2.5.0",
    "@foal/core": "^2.0.0",
    "@foal/jwt": "^2.5.0",
    "@foal/social": "^2.5.0",
    "@foal/storage": "^2.5.0",
    "@foal/swagger": "^2.5.0",
    "@typegoose/typegoose": "^7.6.3",
    "ajv-errors": "^1.0.1",
    "bluebird": "^3.7.2",
    "bottleneck": "^2.19.5",
    "class-validator": "^0.13.1",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.21",
    "mongoose": "5.10.18",
    "mongoose-deep-populate": "^3.2.0",
    "mongoose-keywords": "^0.4.1",
    "node-fetch": "^2.6.1",
    "path": "^0.12.7",
    "pm2": "^5.1.0",
    "source-map-support": "~0.5.19",
    "winston": "^3.3.3",
    "winston-daily-rotate-file": "^4.5.5",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "@types/bluebird": "^3.5.36",
    "@types/jsonwebtoken": "^8.5.4",
    "@types/lodash": "^4.14.171",
    "@types/mocha": "7.0.2",
    "@types/mongoose": "5.10.x",
    "@types/node": "10.17.24",
    "@types/node-fetch": "^2.5.11",
    "@types/yamljs": "^0.2.31",
    "@typescript-eslint/eslint-plugin": "~2.7.0",
    "@typescript-eslint/parser": "~2.7.0",
    "concurrently": "~5.3.0",
    "eslint": "^6.7.0",
    "mocha": "~8.2.0",
    "supertest": "~6.0.0",
    "supervisor": "~0.12.0",
    "typescript": "~4.0.2"
  }
}
